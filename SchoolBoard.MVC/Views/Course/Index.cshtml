@model IEnumerable<SchoolBoard.Models.CourseModels.CourseListItem>

@{
    ViewBag.Title = "Courses";
}

<h2>Courses</h2>


<table class="table-hover" id="courseIndexTable">


    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a style="color: ghostwhite" href="~/Course/Details/@item.Id" asp-controller="Course" asp-action="Details" asp-route-id="@item.Id">
                    @item.CourseName
                </a>
            </td>
        </tr>
    }

</table>
