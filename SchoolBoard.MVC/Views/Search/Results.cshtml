@model SchoolBoard.Models.SearchModels.SearchResultModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            <span>Search Results for @Model.SearchQuery</span>
            <form asp-controller="Search" asp-action="Search" method="post">
                <div class="searchForm">
                    <input asp-for="SearchQuery" type="text" class="instructorHomeSearch" placeholder="Search SchoolBoard..." />
                    <button type="submit" class="btn btn-searchButton">
                        <i class="material-icons">search</i>
                    </button>
                </div>
            </form>
        </div>
    </div>
    <div class="row searchContent">
    @if (Model.Posts.Any())
    {
        <table>
            <tbody>
                @foreach (var post in Model.Posts)
                {
                    <tr>
                        <td>
                            <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id"> @post.Title</a>

                        </td>

                        <td style="color: ghostwhite">
                            @post.Author.Name
                        </td>
                        <td style="color: ghostwhite">
                            @post.Created
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    </div>
    
</div>


