@model SchoolBoard.Models.Student.StudentDetailViewModel

<h2>@Model.Student.Name</h2>

<span id="headingBtn"><a style="color:ghostwhite" asp-controller="Post" asp-action="Create" asp-route-id="@Model.Student.Id" class="btn btn-newPost">Create Post</a></span>

@if (Model.Posts.Any())
{
    <table>
        <tbody>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td>
                        <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id"> @post.Title</a>
                       
                    </td>

                    <td style="color: ghostwhite">
                        @post.Author.Name
                    </td>
                    <td style="color: ghostwhite">
                        @post.Created
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@if (!Model.Posts.Any())
{
    <h2>
        Looks like there aren't any posts for @Model.Student.Name yet.<br />

        Create one <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Student.Id">here.</a> 
    </h2>
}

