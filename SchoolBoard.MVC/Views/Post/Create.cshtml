@model SchoolBoard.Models.PostModels.CreatePostModel

<h1>New Post | @Model.StudentName</h1>

<form asp-action="AddPost" method="post" id="addPostForm">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Body"></label>
        <textarea asp-for="Body" class="form-control"></textarea>
    </div>
    <button style="color:ghostwhite" type="submit" id="submitPostBtn" class="btn btn-submitPost">Submit</button>
    <input asp-for="StudentId" type="hidden" />
</form>

