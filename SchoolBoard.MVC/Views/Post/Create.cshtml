@model SchoolBoard.Models.PostModels.NewPostModel

<h1>New Post | @Model.StudentName</h1>

<form asp-action="CreatePost" method="post" id="createPostForm">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Body">Body</label>
        <textarea asp-for="Body" class="form-control"></textarea>
    </div>
    <button type="submit" id="submitPostButton" class="btn btn-submitPost">
        Submit
    </button>
    <input asp-for="StudentId" type="hidden" />
</form>
